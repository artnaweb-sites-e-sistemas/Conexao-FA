rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper: Check authentication
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Rules for Document Uploads
    // Path structure: clients/{clientId}/documents/{docId}/{fileName}
    match /clients/{clientId}/documents/{docId}/{fileName} {
      
      // Read: Authenticated users only. 
      // (Access control is primarily enforced via Firestore document visibility which contains the download URL)
      allow read: if isAuthenticated();
      
      // Write: Authenticated users, with validation
      allow write: if isAuthenticated()
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && (
                      request.resource.contentType.matches('image/.*') || 
                      request.resource.contentType == 'application/pdf' ||
                      request.resource.contentType == 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' || // .docx
                      request.resource.contentType == 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' // .xlsx
                   );
    }
  }
}
